#: import utils kivy.utils

<MyGridLayout>

    name: name
    pizza: pizza
    color: color


    GridLayout:
        cols:1
        size: root.width, root.height
        
        GridLayout:
            cols:2

            Label:
                text: "Name"
            TextInput:
                id: name
                multiline: False

            Label:
                text: "Favorite Pizza"
            TextInput:
                id: pizza
                multiline: False

            Label:
                text: "Color"
            TextInput:
                id: color
                multiline: False
        Button:
            text: "Submit"
            font_size: 32
            on_press: root.press()
            #RGB - A
            background_normal: ""
            #background_color: (1,0,0,0.5) #RGB
            background_color: utils.get_color_from_hex("#FF00DF") #Hex


            

